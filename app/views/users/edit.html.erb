<body>
  <main>
    <div class="container">
      <div class="row">
        <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mt-3  mx-auto">
          <h1>User info</h1>
          <!--form_withも要修正-->
          <%= form_with model: @book, url: '/books', method: :post do |f| %>
            <div class="form-group">
              <p>Name</p>
              <%= f.text_field :name, class:"form-control book_title mb-3" %>
            </div>
            <div class="form-group">
              <p>Image</p>
            <!--profile画像の選択画面-->
            </div>
            <div class="form-group">
              <p>Introduction</p>
              <%= f.text_field :body, class:"form-control book_body" %>
            </div>
            <div class="form-group">
              <%= f.submit 'Update Book', class:"btn btn-secondary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </main>
  <footer>
    <div class="container mt-5">
      <div class="row">
        <div class="mx-auto">
          <p>CopyRight Infratop.inc</p>
        </div>
      </div>
    </div>
  </footer>
</body>