<body>
  <main>
    <div class="container">
      <div class="row">
        <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mt-3  mx-auto">
          <% if @user.errors.any? %>
          <%= @user.errors.count %>件のエラーが発生しました
            <ul>
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          <% end %>
          <h2>User info</h2>
          <%= form_with model: @user do |f| %>
            <div class="form-group">
              <p>Name</p>
              <%= f.text_field :name, class:"form-control user_name" %>
            </div>
            <div class="form-group">
              <p>Image</p>
              <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
            </div>
            <div class="form-group">
              <p>Introduction</p>
              <%= f.text_area :introduction, class:"form-control user_body" %>
            </div>
            <div class="form-group">
              <%= f.submit 'Update User', class:"btn btn-secondary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </main>
  <footer>
    <div class="container mt-5">
      <div class="row">
        <div class="mx-auto">
          <p>CopyRight Infratop.inc</p>
        </div>
      </div>
    </div>
  </footer>
</body>