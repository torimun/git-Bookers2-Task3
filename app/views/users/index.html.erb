<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3 mt-3">
        <h2>User info</h2>
        <%= image_tag @user.get_profile_image(100,100) %>
        <table class="table mb-5">
          <tbody>
            <tr>
              <th>name</th>
              <th><%= @user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= @user.introduction %></th>
            </tr>
          </tbody>
        </table>
        <div class="row">
          <%= link_to edit_user_path(current_user.id), class:"btn btn-outline-secondary btn-block" do %>
            <i class="fas fa-user-cog"></i>
          <% end %>
        </div>
        <h2 class="mt-3">New book</h2>
        <%= render 'books/list', book: @book %>
      </div>
      <div class="col-md-8 offset-md-1 mt-3">
        <h2>Users</h2>
        <table class="table">
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user|%>
              <tr>
                <td>
                  <!--以下の部分は投稿したユーザーのprofile画像を表示-->
                  <%= link_to do %>
                    <%= image_tag user.get_profile_image(100,100) %>
                  <% end %>
                </td>
                <td>
                  <!--以下の部分は投稿したユーザーのnameを表示-->
                  <%= user.name %>
                </td>
                <td>
                  <!--以下の部分は投稿したユーザーのshowページへのリンク表示-->
                  <%= link_to "Show", user_path(user) %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>