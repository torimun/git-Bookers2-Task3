<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3 mt-3">
        <h2>User info</h2>
        <%= image_tag @user.get_profile_image(100,100) %>
        <table class="table">
          <tbody>
            <tr>
              <th>name</th>
              <th><%= @user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= @user.introduction %></th>
            </tr>
          </tbody>
        </table>
        <div class="row">
          <%= link_to edit_user_path(current_user.id), class:"btn btn-outline-secondary btn-block" do %>
            <i class="fas fa-user-cog"></i>
          <% end %>
        </div>
        <h2 class="mt-3">New book</h2>
        <%= render 'list', book: @book %>
      </div>
      <div class="col-md-8 mt-5 offset-md-1">
        <h2>Book detail</h2>
        <table class="table table-hover table-inveres">
          <tbody>
            <% @books.each do |book| %>
              <tr>
                <!--以下のpathを要修正　作った人のpsthやインスタンス変数の定義をすること　（未完了）-->
                <td>
                  <%= link_to user_path(user.id) do %>
                    <%= image_tag @user.get_profile_image(100,100) %>
                    <%= #作った人のnameの取得と同時にリンクを作成 %>
                  <% end %>
                </td>
                <td>
                  <%= link_to user_path(user.id) do %>
                    <%= @book.title %>
                  <% end %>
                </td>
                <td><%= @book.body %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>