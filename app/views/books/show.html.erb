<main>
  <p><%= flash[:notice] %></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3 mt-3">
        <h2>User info</h2>
        <%= image_tag @user.get_profile_image(100,100) %>
        <table class="table mb-5">
          <tbody>
            <tr>
              <th>name</th>
              <th><%= @user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= @user.introduction %></th>
            </tr>
          </tbody>
        </table>
        <div class="row">
          <%= link_to edit_user_path(current_user.id), class:"btn btn-outline-secondary btn-block" do %>
            <i class="fas fa-user-cog"></i>
          <% end %>
        </div>
        <h2 class="mt-3">New book</h2>
        <%= render 'list', book: @book %>
      </div>
      <div class="col-md-8 mt-3 offset-md-1">
        <h2>Book detail</h2>
        <table class="table table-hover table-inveres">
          <tbody>
              <tr>
                <td>
                  <%= link_to user_path(current_user) do %>
                    <%= image_tag @user.get_profile_image(100,100) %>
                  <% end %>
                  </br>
                  <%= link_to user_path(current_user) do %>
                    <%= @user.name%>
                  <% end %>
                </td>
                <td>
                  <%= @book.title %>
                </td>
                <td>
                  <%= @book.body %>
                </td>
                <% if @book.user == current_user %>
                  <td>
                    <%= link_to "Edit", edit_book_path(@book), class:"btn btn-sm btn-success" %>
                  </td>
                  <td>
                    <%= link_to "Destroy", book_path(@book.id), method: :delete,
                      "data-confirm" => "本当に削除しますか？", class:"btn btn-sm btn-danger" %>
                  </td>
                <% end %>
              </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>
