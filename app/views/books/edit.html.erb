<body>
  <main>
    <div class="container">
      <div class="row">
        <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mt-3  mx-auto">
          <h1>Editing Book</h1>
          <% if @book.errors.any? %>
            <%= @book.errors.count %>件のerrorが発生しました
            <ul>
              <% @book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          <% end %>
          <%= form_with model: @book do |f| %>
            <div class="form-group">
              <p>Title</p>
              <%= f.text_field :title, class:"form-control book_title mb-3" %>
            </div>
            <div class="form-group">
              <p>Opinion</p>
              <%= f.text_area :body, class:"form-control book_body" %>
            </div>
            <div class="form-group">
              <%= f.submit 'Update Book', class:"btn btn-success" %>
            </div>
          <% end %>
          <%= link_to "Show", book_path(@book.id) %>
          |
          <%= link_to "Back", books_path %>
        </div>
      </div>
    </div>
  </main>
  <footer>
    <div class="container mt-5">
      <div class="row">
        <div class="mx-auto">
          <p>CopyRight Infratop.inc</p>
        </div>
      </div>
    </div>
  </footer>
</body>