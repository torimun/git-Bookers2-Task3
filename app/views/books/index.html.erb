<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3 mt-3">
        <div class="error">
          <% if @book.errors.any? %>
            <%= @book.errors.count %>件のエラーが発生しました
            <ul>
              <% @book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          <% end %>
        </div>
        <h2>User info</h2>
        <%= image_tag @user.get_profile_image(100,100) %>
        <table class="table mb-5">
          <tbody>
            <tr>
              <th>name</th>
              <th><%= @user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= @user.introduction %></th>
            </tr>
          </tbody>
        </table>
        <div class="row">
          <%= link_to edit_user_path(current_user.id), class:"btn btn-outline-secondary btn-block" do %>
            <i class="fas fa-user-cog"></i>
          <% end %>
        </div>
        <h2 class="mt-3">New book</h2>
        <%= render 'list', book: @book %>
      </div>

      <div class="col-md-8 mt-3 offset-md-1">
        <h2>Books</h2>
        <table class="table table-hover table-inveres">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
              <tr>
                <td>
                  <!--作った人のuserのshowページへリンク-->
                  <!--作った人のprofile画像を表示-->
                    <%= link_to user_path(book.user_id) do %>
                      <%= image_tag book.user.get_profile_image(100,100) %>
                    <% end %>
                </td>
                <td>
                  <!--bookのshowページにリンク-->
                    <%= link_to book_path(book.id) do %>
                      <%= book.title %>
                    <% end %>
                </td>
                <td>
                  <%= book.body %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>